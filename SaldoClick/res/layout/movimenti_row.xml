<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp" >

    <!-- Date of outcome/income -->

    <TextView
        android:id="@+id/movimento_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <!-- Causal of income/outcome -->

    <TextView
        android:id="@+id/movimento_causal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movimento_date"
        android:ellipsize="end"
        android:textStyle="italic"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Rightend Quantity of outcome/income -->

    <TextView
        android:id="@+id/movimento_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/movimento_date"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/separator_light"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/movimento_causal"
        android:layout_marginTop="@dimen/saldo_from_separator_padding_top"
        android:background="@android:color/darker_gray" />

</RelativeLayout>